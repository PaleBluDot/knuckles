{
	"name": "@palebludot/knuckles",
	"version": "0.0.1",
	"description": "Internal design system.",
	"author": "Pavel Sanchez",
	"repository": "https://github.com/PaleBluDot/sonic-node",
	"license": "MIT",
	"private": true,
	"scripts": {
		"commit": "git cz",
		"dev": "npx sass --watch src/style.scss --style=expanded ./dist/style.dev.css",
		"build": "npx sass src/style.scss --style=compressed ./dist/style.min.css",
		"test": "echo \"Error: no test specified\" && exit 0"
	},
	"devDependencies": {
		"@palebludot/eslint-config": "^0.4.1",
		"commitizen": "^4.2.4",
		"commitlint": "^16.2.4",
		"cross-env": "^7.0.3",
		"cz-customizable": "^6.3.0",
		"eslint": "^7.32.0",
		"eslint-plugin-node": "^11.1.0",
		"husky": "^7.0.4",
		"prettier": "2.6.2",
		"semantic-release": "^19.0.2",
		"stylelint": "^14.8.2"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-customizable"
		},
		"cz-customizable": {
			"config": "commitizen.config.js"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit-msg": "exec < /dev/tty && node_modules/.bin/cz --hook || true"
		}
	},
	"prettier": "@palebludot/prettier-config",
	"dependencies": {
		"sass": "^1.51.0"
	}
}
